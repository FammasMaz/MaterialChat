<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Allow cleartext (HTTP) traffic for user-configured API endpoints.
        Users explicitly configure provider URLs in settings, so they control
        whether to use HTTP or HTTPS. This is needed for local LLM servers
        (Ollama, LM Studio, etc.) that may run on HTTP.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
